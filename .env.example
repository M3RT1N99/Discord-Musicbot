# Discord Bot Token (REQUIRED)
TOKEN=your_discord_bot_token_here

# yt-dlp Configuration
# For Docker: /opt/venv/bin/yt-dlp (default)
# For local: /usr/local/bin/yt-dlp or path to your yt-dlp
YTDLP_PATH=/opt/venv/bin/yt-dlp

# Download Directory
# For Docker: /app/downloads (mounted to volume)
# For local: /tmp/muse_downloads or any writable directory
DOWNLOAD_DIR=/app/downloads

# Cache Configuration
MAX_CACHE=200

# Timeout Configuration (in seconds)
DOWNLOAD_TIMEOUT_SEC=120
SEARCH_TIMEOUT_SEC=30

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=production
